<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">

    <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="postTitle" id="title">
    </div>

    <div style="margin-bottom: 1rem;" class="mb-3">
        <label class="form-label" for="post">Post</label>
        <textarea class="form-control" name="postBody" id="post" rows="5"></textarea>
    </div>

    <div class="">
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </div>

</form>

<%- include("partials/footer"); -%>