<% posts.forEach(function(post) { %>

    <h1> <%= post.postTitle %> </h1>

    <% if (post.postBody.length > 100) { %>
        <p>
        <%= post.postBody.slice(0, 100) + " ..." %>
        <a href="/posts/<%= post._id %>">Read More</a>
        </p>
    <% } else { %>
        <p>
        <%= post.postBody %>
        <a href="/posts/<%= post._id %>">Read More</a>
        </p>
    <% } %>

<% }) %>

